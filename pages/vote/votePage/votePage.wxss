/* pages/vote/votePage/votePage.wxss */
.wrapper{
  background: #f2f2f2;
  padding: 32rpx;
  position: fixed;
  height: 100%;
  width: 100%;
}
  .line{
    width: 590rpx;
    height: 85%;
    border-left: 1px solid #e1e1e1;
    border-right: 1px solid #e1e1e1;
    padding: 0 48rpx;
    margin-top: 60rpx;

  }
  .corner-icon .left-top-img{
    width: 42rpx;
    height: 42rpx;
    position: fixed;
    left: 32rpx;
    top: 32rpx;
  }
    .corner-icon .right-top-img{
    width: 42rpx;
    height: 42rpx;
    position: fixed;
    right: 32rpx;
    top: 32rpx;
    transform: rotate(90deg)
  }
   .corner-icon .left-bottom-img{
    width: 42rpx;
    height: 42rpx;
    position: fixed;
    left: 32rpx;
    bottom: 32rpx;
    transform: rotate(-90deg)
  }
    .corner-icon .right-bottom-img{
    width: 42rpx;
    height: 42rpx;
    position: fixed;
    right: 32rpx;
    bottom: 32rpx;
    transform: rotate(180deg)
  }
  .content{
    width: 586rpx;
    position: absolute;
    top: 60rpx;
    left: 82rpx;
    height: 85%;
    overflow: scroll;
    /* border: 1px solid red; */
  }
  .header{
    text-align: center;
    border-bottom: 3px solid #e1e1e1;
    padding-bottom: 10rpx
  }
    .title{
      font-size: 36rpx;
      color: #333;
    }
    .deadline{
      font-size: 24rpx;
      color: #909090;
      margin-bottom: 10rpx;
    }
    .explain{
      font-size: 28rpx;
      color: #666;
      line-height: 48rpx;
      text-align: left;
    }
  .question{
    margin-top: 20rpx; 
    color: #333;
    font-size: 28rpx;
    line-height: 60rpx;
  }
    .question-wrapper{
      margin-bottom: 35rpx;
    }
      .tips{
        color: #c82249;
        margin-left: 10rpx;
      }
      .tips-text{
        background: #b01f42;
        color: #fff;
        border-radius: 18rpx;
        width: 260rpx;
        text-align: center;
        line-height: 36rpx;
        padding-left: 20rpx;
      }
       /* 单选 */
      .radio{
        display: block;
      }
      /* 选中的背景样式 */
      radio .wx-radio-input.wx-radio-input-checked{
        border: none;
      }
      /* 选中的对勾样式 */
      radio .wx-radio-input.wx-radio-input-checked::before{
        height: 30rpx;
        width: 30rpx;
        border-radius: 50%;
        color:transparent;
        background: #fff;
      }
      /* 多选题 */
      .checkbox{
        display: block;
        color:#000;
      }
      checkbox .wx-checkbox-input.wx-checkbox-input-checked{
        border: none;
        background: #000;
        
      }
      checkbox .wx-checkbox-input.wx-checkbox-input-checked::before{
        height: 25rpx;
        width:25rpx;
        color:transparent; 
        background: #fff;  
      }
    /* 填空题 */
    textarea{
     width: 520rpx;
     height: 180rpx;
     background: #e5e5e5;
     border-radius: 16rpx;
     border: 2rpx solid #a0a0a0;
     padding: 28rpx 30rpx;
     overflow: scroll;
     margin-top: 30rpx;
     line-height: 48rpx;
    }
    .btn{
      width: 585rpx;
      height: 88rpx;
      background-image: linear-gradient(0deg, 
        #000000 0%, 
        #323232 100%), 
      linear-gradient(
        #000000, 
        #000000);
      box-shadow: 0px 1rpx 2rpx 0px 
        rgba(0, 0, 0, 0.65);
      border-radius: 10rpx;
      color: #fff;
      font-size: 36rpx;
      text-align: center;
      line-height: 88rpx;
      margin-top: 30rpx;
    }
    ::-webkit-scrollbar {
      width: 0;
      height: 0;
      color: transparent;
    }
